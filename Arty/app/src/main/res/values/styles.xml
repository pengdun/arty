<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color_main_window</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="EditTextTitleStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextContentStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

</resources>
